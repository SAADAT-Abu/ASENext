
params {
    // Test data paths
    input                 = "tests/samplesheet.csv"
    outdir                = "test_results"
    
    // Reference files
    fasta                 = "tests/test_data/reference/chr11_mini.fa"
    gtf                   = "tests/test_data/reference/chr11_mini.gtf"
    gene_features         = "tests/test_data/reference/chr11_mini_genes.bed"
    
    // You will need to build STAR index from the reference:
    // mkdir -p tests/test_data/reference/star_index
    // STAR --runMode genomeGenerate --genomeDir tests/test_data/reference/star_index --genomeFastaFiles tests/test_data/reference/chr11_mini.fa --sjdbGTFfile tests/test_data/reference/chr11_mini.gtf --genomeSAindexNbases 10
    star_index            = "tests/test_data/reference/star_index"
    
    // Beagle files
    beagle_ref            = "tests/test_data/variants/beagle_ref_chr11.vcf.gz"
    beagle_map            = "tests/test_data/variants/genetic_map_chr11.txt"
    
    // Analysis parameters
    chromosome            = "chr11"
    umi_separator         = ":"
    
    // Resources for testing
    max_cpus              = 2
    max_memory            = "4.GB"
    max_time              = "2.h"
}

process {
    withName: STAR_ALIGN_WASP {
        cpus = 2
        memory = "4.GB"
    }
}

